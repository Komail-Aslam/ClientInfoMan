@model ClientInformationManager.Models.Picture

@{
    ViewBag.Title = "Create";
    ClientInformationManager.Models.PersonInformation person = ViewBag.person;
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Picture", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Picture</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <form action="" method="post" enctype="multipart/form-data">
            <label for="picture">Select a picture to upload</label>
            <input type="file" name="newPicture" id="picture" /><br />
            <label for="caption">Caption:</label><input type="text" name="caption" id="caption" /><br />
            <label for="caption">Time:</label><input type="text" name="time" id="time" /><br />
            <label for="caption">Location:</label><input type="text" name="location" id="location" /><br />
            <input type="submit" value="Upload" class="btn btn-default" />
        </form>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { id = ViewBag.id })
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
