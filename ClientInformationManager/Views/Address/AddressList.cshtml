@model IEnumerable<ClientInformationManager.Models.Address>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.street_address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.city)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.province_state)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.zip_postal_code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country.country_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonInformation.first_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.street_address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.city)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.province_state)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.zip_postal_code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country.country_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonInformation.first_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.address_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.address_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.address_id })
        </td>
    </tr>
}

</table>
